<Window x:Class="KeyKeeper.Dialogs.InfoBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyKeeper.Dialogs"
        mc:Ignorable="d"
        Title="Monit:" Height="160" Width="240"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InfoText" Style="{StaticResource AppStyle_TextBoxDialog}" Margin="10,10,10,0"/>
        <Button Style="{StaticResource AppStyle_SideMenuButton}" Foreground="DarkRed" Content="OK" Grid.Row="1" Click="Button_Click" Width="100" VerticalAlignment="Top"/>
    </Grid>
</Window>
